<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/page5_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:text="Income Details"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oth_inc_label"
        android:layout_width="118dp"
        android:layout_height="23dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:width="20dp"
        android:text="Other Income"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page5_title" />

    <EditText
        android:id="@+id/oth_inc_input"
        android:layout_width="257dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="annual salary"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/oth_inc_label"
        app:layout_constraintTop_toBottomOf="@+id/oth_inc_label" />

    <TextView
        android:id="@+id/exe_all_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="124dp"
        android:text="Exempt allowances"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page5_title" />

    <EditText
        android:id="@+id/exe_all_input"
        android:layout_width="261dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:hint="Enter Value"
        app:layout_constraintStart_toStartOf="@+id/exe_all_label"
        app:layout_constraintTop_toBottomOf="@+id/exe_all_label" />

    <TextView
        android:id="@+id/home_loan_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="228dp"
        android:text="Interest on Home Loan- Self occupied"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page5_title" />

    <EditText
        android:id="@+id/home_loan_int_input"
        android:layout_width="294dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:hint="Enter value"
        app:layout_constraintStart_toStartOf="@+id/home_loan_int_label"
        app:layout_constraintTop_toBottomOf="@+id/home_loan_int_label" />

    <TextView
        android:id="@+id/home_loan_int_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="328dp"
        android:text="Interest on Home Loan- Let Out"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page5_title" />

    <EditText
        android:id="@+id/home_loan_input"
        android:layout_width="249dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:hint="Enter value"
        app:layout_constraintStart_toStartOf="@+id/home_loan_label"
        app:layout_constraintTop_toBottomOf="@+id/home_loan_label" />

    <Button
        android:id="@+id/next_step"
        android:layout_width="145dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="50dp"
        android:text="Next Step"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="134dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="56dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_loan_int_input" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="177dp"
        android:layout_height="62dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Answer"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_loan_int_input" />

</androidx.constraintlayout.widget.ConstraintLayout>