<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">


    <TextView
        android:id="@+id/page5_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:text="Deductions"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/basic_deductions_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Basic Deductions - 80C"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page5_title" />

    <EditText
        android:id="@+id/basic_deductions_input"
        android:layout_width="265dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/basic_deductions_label"
        android:layout_marginTop="8dp"
        android:hint="Enter Value"
        app:layout_constraintStart_toStartOf="@+id/basic_deductions_label"
        app:layout_constraintTop_toBottomOf="@+id/basic_deductions_label" />

    <TextView
        android:id="@+id/medical_insurance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="140dp"
        android:text="Medical Insurance - 80D"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page5_title" />

    <EditText
        android:id="@+id/medical_insurance_input"
        android:layout_width="264dp"
        android:layout_height="49dp"
        android:layout_alignStart="@+id/medical_insurance_label"
        android:layout_marginTop="8dp"
        android:hint="Enter Value"
        app:layout_constraintStart_toStartOf="@+id/medical_insurance_label"
        app:layout_constraintTop_toBottomOf="@+id/medical_insurance_label" />

    <TextView
        android:id="@+id/interest_educational_loan_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="240dp"
        android:text="Interest on Educational Loan - 80E"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page5_title" />

    <EditText
        android:id="@+id/interest_educational_loan_input"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/interest_educational_loan_label"
        android:layout_marginTop="8dp"
        android:hint="Enter Value"
        app:layout_constraintStart_toStartOf="@+id/interest_educational_loan_label"
        app:layout_constraintTop_toBottomOf="@+id/interest_educational_loan_label" />

    <TextView
        android:id="@+id/employee_contribution_nps_label"
        android:layout_width="262dp"
        android:layout_height="21dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="356dp"
        android:text="Employee's contribution to NPS - 80CCD"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page5_title" />

    <EditText
        android:id="@+id/employee_contribution_nps_input"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/employee_contribution_nps_label"
        android:layout_marginTop="16dp"
        android:hint="Enter Value"
        app:layout_constraintStart_toStartOf="@+id/employee_contribution_nps_label"
        app:layout_constraintTop_toBottomOf="@+id/employee_contribution_nps_label" />

    <Button
        android:id="@+id/next_step"
        android:layout_width="145dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="50dp"
        android:text="Next Step"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>